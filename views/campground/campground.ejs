<% include ../partials/header %>

    <header class="jumbotron" style="padding-top: 0px; background-color: #E3CCBE ;">
        <div class="container">
            <h1><span class="glyphicon glyphicon-tent"></span> Welcome To YelpCamp!</h1>

            <p>View our hand-picked campgrounds</p>
            <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">add new campground</a>
            </p>
            <p>
                <% if (currentUser){%>
                    <a class="btn btn-primary btn-large" href="/campgrounds/<%= currentUser._id%>/profile">My camps</a>
                    <% }%>
            </p>
        </div>
    </header>

    <div class="container" style="padding-top: 20px;">
        <div class="row text-center flex-wrap" id="campground-grid">
            <% campgrounds.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail" style="background-color: #E3CCBE;">
                        <img src="<%= campground.image %> ">


                        <div class="caption">
                            <h4>
                                <%= campground.name %>
                            </h4>
                        </div>
                        <p>
                            <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">more info</a>
                        </p>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <% include ../partials/footer %>