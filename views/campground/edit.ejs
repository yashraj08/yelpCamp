<% include ../partials/header %>
<div class="container">
<div class="row">

<h1 style="text-align: center">Update Campground-<%=campground.name%></h1>
<div style="width: 30%; margin:30px auto;">
<form action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method="POST")>
<div class="form-group">
<input class="form-control" type="text" name="camp[name]" value="<%= campground.name %>">
</div>
<div class="form-group">
<input class="form-control" type="text" name="camp[image]" value="<%= campground.image %>">
</div>
<div class="form-group">
<input class="form-control" type="text" name="camp[price]" value="<%=campground.price%>">
</div>
<div class="form-group">
<input class="form-control" type="text" name="camp[address]" value="<%= campground.address%>">
</div>
<div class="form-group">

<input class="form-control" type="text" name="camp[description]" value="<%= campground.description %>">
</div>
<div class="form-group">
<button class="btn btn-lg btn-primary btn-block">submit</button>
</div>
</form>
<a href="/campgrounds">back</a>
</div>
</div>
</div>

<% include ../partials/footer %>